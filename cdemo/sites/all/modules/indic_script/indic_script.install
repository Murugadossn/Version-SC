/**
 * delete the indic_default_lang_% vars since we using cookie to store.
 */
function indic_script_update_1() {

  db_query("DELETE FROM {variable} WHERE name LIKE 'indic_default_lang_%'");
  cache_clear_all('variables', 'cache');

  return array();
}